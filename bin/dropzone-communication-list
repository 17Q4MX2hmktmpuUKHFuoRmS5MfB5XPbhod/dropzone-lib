#!/usr/bin/env node
var program = require('commander')
var command = require('../src/commands').communication.list

program
  .usage('<private_key> [options]')
  .description(
    'Show the available communications for a given testnet private key')
  .on('--help', function () {
    console.log(
      '  This command lists all the conversations that have been \n' +
      '  initiated and/or authenticated on the testnet address correlated \n' +
      '  with the specified <private_key>.\n')
    console.log(
      '  Example:\n\n' +
      '  # List all communication sessions for a private key\n' +
      '  dropzone communication list \\\n' +
      '    92UvdTpmxA6cvD6YeJZSiHW8ff8DsZXL2PHZu9Mg7JY3zbaETJw\n')
  })
  .action(command)

program.parse(process.argv)
