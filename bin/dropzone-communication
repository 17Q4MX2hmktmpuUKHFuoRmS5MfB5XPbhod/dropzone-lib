#!/usr/bin/env node
var program = require('commander');

program
  .usage('<command> [options]')
  .description('Manage communications between you and another party')
  .command('new', 'Start a new conversation with the person at a given testnet address')
  .command('list', 'Show the available communication sessions for a given testnet private key')
  .command('show', 'Show all the available messages for a given testnet private key and session')
  .command('say', 'Communicate with somebody in a private conversation over testnet');

program.parse(process.argv);
