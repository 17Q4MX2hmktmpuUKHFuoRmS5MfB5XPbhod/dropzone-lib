#!/usr/bin/env node
var program = require('commander');
var tab = new Array(27).join(' ');

program
  .usage('<private_key> [options]')
  .description('Create a buyer profile')
  .option('-s, --description <text>', "A description of yourself")
  .option('-a, --alias <name>',
    "A short name by which you would like to be identified")
  .option('-t, --transfer_id <addr>',
    "Transfer this identity to the specified address. Note that this is a one-way\n"
    + tab + "operation, and that you should be sure to control the destination key. If you wish to\n"
    + tab + "deactivate your store entirely, a 0 can be passed here")
  .on('--help', function(){
    console.log(
      "  A buyer profile is an optional declaration that can be attached to an address\n"
      + "  (<private_key>) for the purpose of adding metadata to your identity as a buyer. This command\n"
      + "  will create a profile on the specified address, or update the existing profile on the\n"
      + "  specified address.\n");
    console.log(
      "  Example:\n\n"
      + "  # Declare a buyer profile\n"
      + "  dropzone profile buyer create \\\n"
      + "    92UvdTpmxA6cvD6YeJZSiHW8ff8DsZXL2PHZu9Mg7JY3zbaETJw \\\n"
      + "    --alias='Miracle Max' \\\n"
      + "    --description='First buyer'\n");
  });

program.parse(process.argv);
